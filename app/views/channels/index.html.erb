<p id="notice"><%= notice %></p>

<h1>Channels</h1>

<% @channels.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |channel| %>
      <div class="col-md-4">
        <%= image_tag channel.picture_url(:thumb) if channel.picture.present? %>
        <h4><%= link_to channel.name, channel %></h4>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to 'New Channel', new_channel_path %>
